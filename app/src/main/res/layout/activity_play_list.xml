<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".activites.PlayListActivity">

    <!-- Categories List -->
    <ListView
        android:id="@+id/lv_play_list_categories"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:divider="@color/colorPrimaryDark"
        android:dividerHeight="@dimen/_1sdp"
        android:drawSelectorOnTop="true" />

    <!-- Media List -->
    <ListView
        android:id="@+id/lv_play_list_medias"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/lv_play_list_categories"
        android:background="@color/colorPrimary"
        android:divider="@color/colorPrimaryDark"
        android:dividerHeight="@dimen/_1sdp"
        android:drawSelectorOnTop="true" />

    <!-- Media List -->
    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/ex_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/lv_play_list_medias"
        android:background="@color/black"
        app:fastforward_increment="10000"
        app:hide_on_touch="true"
        app:resize_mode="zoom"
        app:show_timeout="4000"
        app:surface_type="surface_view"
        app:rewind_increment="10000"
        app:shutter_background_color="@color/black"
        app:use_controller="true"/>
</RelativeLayout>