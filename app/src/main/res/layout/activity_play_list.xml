<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".activites.PlayListActivity">

    <RelativeLayout
        android:id="@+id/rl_play_list"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ibtn_play_list_collaps_lists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/colorPrimary"
            app:srcCompat="@drawable/ic_baseline_arrow_drop_up_24" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_play_list_categories_title"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/lbl_categories"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold" />

        <!-- Categories List -->
        <ListView
            android:id="@+id/lv_play_list_categories"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_23sdp"
            android:background="@color/colorPrimary"
            android:divider="@color/colorPrimaryDark"
            android:dividerHeight="@dimen/_1sdp"
            android:drawSelectorOnTop="true" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_play_list_medias_title"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_toRightOf="@id/tv_play_list_categories_title"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/lbl_channels"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold" />

        <!-- Media List -->
        <ListView
            android:id="@+id/lv_play_list_medias"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_23sdp"
            android:layout_toRightOf="@id/lv_play_list_categories"
            android:background="@color/colorPrimary"
            android:divider="@color/colorPrimaryDark"
            android:dividerHeight="@dimen/_1sdp"
            android:drawSelectorOnTop="true" />
    </RelativeLayout>

    <!-- Media List -->
    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/ex_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_50sdp"
        android:layout_toRightOf="@id/rl_play_list"
        android:background="@color/black"
        app:fastforward_increment="10000"
        app:hide_on_touch="true"
        app:rewind_increment="10000"
        app:show_timeout="4000"
        app:shutter_background_color="@color/black"
        app:surface_type="surface_view"
        app:use_controller="true" />

    <RelativeLayout
        android:id="@+id/rl_play_list_expand"
        android:layout_width="@dimen/_23sdp"
        android:layout_height="@dimen/_23sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark"
        android:visibility="gone">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ibtn_play_list_expand_lists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/colorPrimary"
            app:srcCompat="@drawable/ic_baseline_arrow_drop_down_24" />
    </RelativeLayout>

</RelativeLayout>