<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".activites.MoviesActivity">

    <RelativeLayout
        android:id="@+id/rl_movies_top_menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_movies_home"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_movies_home"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:tint="@color/white"
                    app:srcCompat="@drawable/svg_home_512" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_movies_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_movies_home"
                    android:text="Home"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8ssp"
                    android:textStyle="normal" />

                <View
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:background="@color/colorPrimaryDark" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_movies_tv"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_movies_tv"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:tint="@color/white"
                    app:srcCompat="@drawable/svg_tv_512" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_movies_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_movies_tv"
                    android:text="Live TV"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8ssp"
                    android:textStyle="normal" />

                <View
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:background="@color/colorPrimaryDark"
                    android:layout_margin="@dimen/_3sdp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_movies_movies"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_movies_movies"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:tint="@color/yellow_500"
                    app:srcCompat="@drawable/svg_movie_512" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_movies_movies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_movies_movies"
                    android:text="Movies"
                    android:textColor="@color/yellow_500"
                    android:textSize="@dimen/_8ssp"
                    android:textStyle="normal" />

                <View
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:background="@color/colorPrimaryDark"
                    android:layout_margin="@dimen/_3sdp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_movies_shows"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_movies_shows"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:tint="@color/white"
                    app:srcCompat="@drawable/svg_videos_512" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_movies_shows"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_movies_shows"
                    android:text="Shows"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8ssp"
                    android:textStyle="normal" />

                <View
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:background="@color/colorPrimaryDark"
                    android:layout_margin="@dimen/_3sdp"/>

            </RelativeLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_movies_top_menu_logo"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_8sdp"
            android:elevation="10dp"
            app:srcCompat="@drawable/ic_splash_screen_logo" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_movies"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_movies_top_menu"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimaryDark">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_movies_categories_title"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/lbl_categories"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold" />

        <!-- Categories List -->
        <ListView
            android:id="@+id/lv_movies_categories"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="match_parent"
            android:padding="@dimen/_3sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_23sdp"
            android:background="@color/colorPrimaryDark"
            android:divider="@color/colorPrimaryDark"
            android:dividerHeight="@dimen/_3sdp"
            android:drawSelectorOnTop="true" />

    </RelativeLayout>

    <!-- Movies Grid -->
    <GridView
        android:id="@+id/gv_movies"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_16sdp"
        android:layout_below="@id/rl_movies_top_menu"
        android:layout_toRightOf="@id/rl_movies"
        android:layout_gravity="center"
        android:columnWidth="@dimen/_130sdp"
        android:drawSelectorOnTop="true"
        android:gravity="center"
        android:horizontalSpacing="6dp"
        android:numColumns="auto_fit"
        android:stretchMode="spacingWidth"
        android:verticalSpacing="6dp" />

</RelativeLayout>